@page "/{key:int?}/{start:int?}/{repository:long?}"
@model IndexModel
@{
    ViewData["Title"] = "XRealiSE";
}

<div class="text-center">
<h1 class="display-4">XRealiSE</h1>
<p>Search for mixed reality components on GitHub.</p>
<div>
    <form method="post" asp-antiforgery="false">
        <div class="mb-3 row">
            <div class="col-sm-9">
                @if (DbHelper.SearchResults.Keys.Contains(Model.SearchKey))
                {
                    <input class="form-control form-control-lg" asp-for="Searchstring" type="text" maxlength="255" value="@DbHelper.SearchResults[Model.SearchKey].SearchString"/>
                    <input type="hidden" asp-for="ParentSearch" value="@DbHelper.SearchResults[Model.SearchKey].DatabaseId"/>
                }
                else
                {
                    <input class="form-control form-control-lg" asp-for="Searchstring" type="text" maxlength="255"/>
                }
            </div>
            <div class="d-grid col-sm-3 mx-auto">
                <input type="submit" class="btn btn-primary btn-lg" name="search" value="search"/>
            </div>
        </div>
        <div class="accordion" id="accordionFlushExample">
            <div class="accordion-item">
                <h2 class="accordion-header" id="flush-headingOne">
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#flush-collapseOne" aria-expanded="false" aria-controls="flush-collapseOne">
                        Advanced search
                    </button>
                </h2>
                <div id="flush-collapseOne" class="accordion-collapse collapse" aria-labelledby="flush-headingOne" data-bs-parent="#accordionFlushExample">
                    <div class="accordion-body">
                        <div class="mb-3 row">
                            <label for="SearchType" class="col-sm-3 col-form-label">Search type</label>
                            <div class="col-sm-9">
                                <select class="form-select" id="SearchType" asp-for="SearchType">
                                    <option selected value="0">Match any word</option>
                                    <option value="1">Match all words</option>
                                </select>
                            </div>
                        </div>
                        <div class="mb-3 row">
                            <label for="Order" class="col-sm-3 col-form-label">Order by</label>
                            <div class="col-sm-5">
                                <select class="form-select" id="Order" asp-for="OrderAttribute">
                                    <option selected value="0">Stars</option>
                                    <option value="1">Forks</option>
                                    <option value="2">Created date</option>
                                    <option value="3">Last commit date</option>
                                </select>
                            </div>
                            <div class="col-sm-4">
                                <select class="form-select" asp-for="Order">
                                    <option selected value="0">Descending</option>
                                    <option value="1">Ascending</option>
                                </select>
                            </div>
                        </div>
                        <div class="mb-3 row">
                            <div class="col-sm-12">
                                Filter search
                            </div>
                        </div>
                        <div class="mb-3 row">
                            <div class="col-sm-1">&nbsp;</div>
                            <label for="filter1" class="col-sm-1 col-form-label">
                                <input class="form-check-input" type="checkbox" asp-for="FilterActive[0]"> Stars
                            </label>
                            <div class="col-sm-1">
                                <select class="form-select" id="filter1" asp-for="FilterEquality[0]">
                                    <option selected value="0">&gt;=</option>
                                    <option value="1">&lt;=</option>
                                    <option value="2">=</option>
                                </select>
                            </div>
                            <div class="col-sm-2">
                                <input class="form-control" asp-for="FilterValue[0]" value="0" type="number" maxlength="6"/>
                            </div>

                            <div class="col-sm-2">&nbsp;</div>

                            <label for="filter2" class="col-sm-1 col-form-label">
                                <input class="form-check-input" type="checkbox" asp-for="FilterActive[1]"> Forks
                            </label>
                            <div class="col-sm-1">
                                <select class="form-select" id="filter2" asp-for="FilterEquality[1]">
                                    <option selected value="0">&gt;=</option>
                                    <option value="1">&lt;=</option>
                                    <option value="2">=</option>
                                </select>
                            </div>
                            <div class="col-sm-2">
                                <input class="form-control" asp-for="FilterValue[1]" value="0" type="number" maxlength="6"/>
                            </div>
                        </div>
                        <div class="mb-3 row">
                            <label for="filter3" class="col-sm-2 col-form-label">
                                <input class="form-check-input" type="checkbox" asp-for="FilterActive[2]"> Project age
                            </label>
                            <div class="col-sm-1">
                                <select class="form-select" id="filter3" asp-for="FilterEquality[2]">
                                    <option selected value="0">&gt;=</option>
                                    <option value="1">&lt;=</option>
                                </select>
                            </div>
                            <div class="col-sm-2">
                                <input class="form-control" asp-for="FilterValue[2]" value="0" type="number" maxlength="6"/>
                            </div>
                            <div class="col-sm-1 col-form-label">
                                days.
                            </div>


                            <label for="filter4" class="col-sm-2 col-form-label">
                                <input class="form-check-input" type="checkbox" asp-for="FilterActive[3]"> Last commit
                            </label>
                            <div class="col-sm-1">
                                <select class="form-select" id="filter4" asp-for="FilterEquality[3]">
                                    <option selected value="0">&gt;=</option>
                                    <option value="1">&lt;=</option>
                                </select>
                            </div>
                            <div class="col-sm-2">
                                <input class="form-control" asp-for="FilterValue[3]" value="0" type="number" maxlength="6"/>
                            </div>
                            <div class="col-sm-1 col-form-label">
                                days ago.
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>
<br/>
@if (DbHelper.SearchResults.Keys.Contains(Model.SearchKey))
{
    <div>
        <nav>
            <ul class="pagination justify-content-center flex-wrap">
                @if (Model.Start != 0)
                {
                    <li class="page-item">
                        <a class="page-link" href="/@Model.SearchKey/@(Model.Start - 1)">Previous</a>
                    </li>
                }
                else
                {
                    <li class="page-item">
                        <a class="page-link">Previous</a>
                    </li>
                }
                @for (int i = 0; i * Model.ResultsPerPage <= DbHelper.SearchResults[Model.SearchKey].ResultSet.Length; i++)
                {
                    if (Model.Start == i)
                    {
                        <li class="page-item">
                            <a class="page-link alert-primary">@(i + 1)</a>
                        </li>
                    }
                    else
                    {
                        <li class="page-item">
                            <a class="page-link" href="/@Model.SearchKey/@i">@(i + 1)</a>
                        </li>
                    }
                }
                @if (Model.Start < DbHelper.SearchResults[Model.SearchKey].ResultSet.Length / Model.ResultsPerPage)
                {
                    <li class="page-item">
                        <a class="page-link" href="/@Model.SearchKey/@(Model.Start + 1)">Next</a>
                    </li>
                }
                else
                {
                    <li class="page-item">
                        <a class="page-link">Next</a>
                    </li>
                }
            </ul>
        </nav>
        @for (int i = 0; i >= 0 && i < Model.ResultSubSet.Length; i++)
        {
    <div class="container border m-2">
        <div class="row m-2">
            <div class="col-6">
                <b style="font-size: large">
                    <a href="/@Model.SearchKey/@(Model.Start + 1)/@Model.ResultSubSet[i].GitHubRepositoryId" target="_blank">@Model.ResultSubSet[i].Owner/@Model.ResultSubSet[i].Name</a>
                </b>
            </div>
            <div class="col align-bottom">
                @Model.ResultSubSet[i].ForksCount Forks
            </div>
            <div class="col align-bottom">
                @Model.ResultSubSet[i].StargazersCount Stars
            </div>
        </div>
        <div class="m-2">
            @Model.ResultSubSet[i].Description
        </div>
        <div class="row m-2">
            <div class="col">
                @Model.ResultSubSet[i].License
            </div>
            <div class="col">
                Created @Model.ResultSubSet[i].CreatedAt.ToString()
            </div>
            <div class="col">
                Last commit @Model.ResultSubSet[i].PushedAt
            </div>
        </div>
        @if (Model.ResultSubSet[i].ImageUrl != null)
        {
            <div class="m-2">
                <img src ="@Model.ResultSubSet[i].ImageUrl" height="100" />
            </div>
        }
        <div class="m-2">
            @string.Join(' ',Model.ResultExtraData[i])
        </div>
    </div>
        }
        <nav>
            <ul class="pagination justify-content-center flex-wrap">

                @if (Model.Start != 0)
                {
                    <li class="page-item">
                        <a class="page-link" href="/@Model.SearchKey/@(Model.Start - 1)">Previous</a>
                    </li>
                }
                else
                {
                    <li class="page-item">
                        <a class="page-link">Previous</a>
                    </li>
                }
                @for (int i = 0; i * Model.ResultsPerPage <= DbHelper.SearchResults[Model.SearchKey].ResultSet.Length; i++)
                {
                    if (Model.Start == i)
                    {
                        <li class="page-item">
                            <a class="page-link alert-primary">@(i + 1)</a>
                        </li>
                    }
                    else
                    {
                        <li class="page-item">
                            <a class="page-link" href="/@Model.SearchKey/@i">@(i + 1)</a>
                        </li>
                    }
                }
                @if (Model.Start < DbHelper.SearchResults[Model.SearchKey].ResultSet.Length / Model.ResultsPerPage)
                {
                    <li class="page-item">
                        <a class="page-link" href="/@Model.SearchKey/@(Model.Start + 1)">Next</a>
                    </li>
                }
                else
                {
                    <li class="page-item">
                        <a class="page-link">Next</a>
                    </li>
                }
            </ul>
        </nav>
        If you'd like to give feedback then consider filling out our <a href="https://limesurvey.tech4comp.dbis.rwth-aachen.de/index.php/368718?lang=en" target="_blank">feedback form</a>.
    </div>
}
else if (Model.SearchKey == -2)
{
    <div class="alert-danger">The search timed out - please try again using less words.</div>
}
else if (Model.SearchKey == -3)
{
    <div class="alert-danger">The search you requested is no longer available - please repeat your search.</div>
}
</div>